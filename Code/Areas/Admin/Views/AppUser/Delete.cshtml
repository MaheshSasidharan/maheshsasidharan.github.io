@model IMAnnualReview.Domain.Entities.AppUser

@{
    ViewBag.Title = "Delete";
}

<div class="container" role="main">

    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>

    <fieldset>
        <legend>AppUser</legend>

        <div class="display-label">UserId</div>
        <div class="display-field">@Model.UserId</div>

        <div class="display-label">Email</div>
        <div class="display-field">@Model.Email</div>

        <div class="display-label">FirstName</div>
        <div class="display-field">@Model.FirstName</div>

        <div class="display-label">LastName</div>
        <div class="display-field">@Model.LastName</div>

        <div class="display-label">Active</div>
        <div class="display-field">@Model.Active</div>

        <div class="display-label">UpdatedBy</div>
        <div class="display-field">@Model.UpdatedBy</div>

        <div class="display-label">DateUpdated</div>
        <div class="display-field">@String.Format("{0:g}", Model.DateUpdated)</div>

        <div class="display-label">CreatedBy</div>
        <div class="display-field">@Model.CreatedBy</div>

        <div class="display-label">DateCreated</div>
        <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

        <div class="display-label">AppUserRoles</div>
        <div class="display-field">@(Model.AppUserRoles == null ? "None" : Model.AppUserRoles.Count.ToString())</div>
    </fieldset>

    @using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }

</div>

