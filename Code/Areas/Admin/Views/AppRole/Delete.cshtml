@model IMAnnualReview.Domain.Entities.AppRole

@{
    ViewBag.Title = "Delete";
}

<div class="container" role="main">

    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>

    <fieldset>
        <legend>AppRole</legend>

        <div class="display-label">RoleName</div>
        <div class="display-field">@Model.RoleName</div>

        <div class="display-label">RoleAbbr</div>
        <div class="display-field">@Model.RoleAbbr</div>

        <div class="display-label">ShortDesc</div>
        <div class="display-field">@Model.ShortDesc</div>

        <div class="display-label">LongDesc</div>
        <div class="display-field">@Model.LongDesc</div>

        <div class="display-label">OrderBy</div>
        <div class="display-field">@Model.OrderBy</div>

        <div class="display-label">Active</div>
        <div class="display-field">@Model.Active</div>

        <div class="display-label">UpdatedBy</div>
        <div class="display-field">@Model.UpdatedBy</div>

        <div class="display-label">DateUpdated</div>
        <div class="display-field">@String.Format("{0:g}", Model.DateUpdated)</div>

        <div class="display-label">CreatedBy</div>
        <div class="display-field">@Model.CreatedBy</div>

        <div class="display-label">DateCreated</div>
        <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

        <div class="display-label">AppUserRoles</div>
        <div class="display-field">@(Model.AppUserRoles == null ? "None" : Model.AppUserRoles.Count.ToString())</div>
    </fieldset>

    @using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }

</div>

