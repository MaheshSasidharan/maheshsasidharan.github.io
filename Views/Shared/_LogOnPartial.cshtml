@using CCOM.Sso.Helpers
@if(Request.IsAuthenticated) {
    <text><strong>User: </strong>@User.Identity.Name
    @Html.SsoCrossSiteActionLinkDev("Log Off", "AskIM", "LogOff", "Account", null, new { @class = "btn btn-sm  btn-danger" })</text>
}
else
{
    @:@Html.ActionLink("Log In", "Index", "Home", new { area = "Admin" }, new { @class = "btn btn-sm  btn-danger" })
}
@{
    var roles = (List<string>)HttpContext.Current.Session["RoleList"];
}
@if (roles != null)
{
    <strong>Role(s):</strong> 
        
    var rolesoutput = "";
    int count = 0;
    foreach (string role in roles)
    {
        if (count == 0)
        {
            rolesoutput = role.ToString();
        }
        else
        {
            rolesoutput += ", " + role.ToString();
        }

        count++;
    }
    @rolesoutput;
}